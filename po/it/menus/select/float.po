msgid ""
"You can access this command from the image menubar through "
"<menuchoice><guimenu><accel>S</accel>elect</guimenu><guimenuitem><accel>F</"
"accel>loat</guimenuitem></menuchoice>,"
msgstr ""
"È possibile accedere a questo comando dalla barra del menu immagine tramite "
"<menuchoice><guimenu><accel>S</accel>eleziona</guimenu><guimenuitem><accel>F</"
"accel>luttuante</guimenuitem></menuchoice>,"

#: src/menus/selection-float.xml:81(para)
msgid ""
