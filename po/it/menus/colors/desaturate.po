#: src/menus/colors/desaturate/desaturate.xml:105(para)
#: src/menus/colors/desaturate/desaturate.xml:122(para)
#: src/menus/colors/desaturate/desaturate.xml:138(para)
msgid "The shades of gray will be calculated as"
msgstr "La scala di grigi sarà calcolata come"

#: src/menus/colors/desaturate/desaturate.xml:109(phrase)
