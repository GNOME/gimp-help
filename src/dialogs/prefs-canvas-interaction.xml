<sect2 id="gimp-prefs-canvas-interaction">
  <title>Canvas Interaction</title>

  <indexterm>
    <primary>Dialogs</primary>
    <secondary>Preferences</secondary>
    <tertiary>Canvas Interaction</tertiary>
  </indexterm>
  <indexterm>
    <primary>Canvas Interaction</primary>
    <secondary>Preferences</secondary>
  </indexterm>

  <figure>
    <title>General Canvas Interaction Preferences</title>
    <mediaobject>
      <imageobject>
        <imagedata format="PNG"
          fileref="images/preferences/prefs-canvas-interaction.png"/>
      </imageobject>
      <caption>
        <para>
          This page lets you customize aspects of the behavior when
          interacting with the canvas.
        </para>
      </caption>
    </mediaobject>
  </figure>

  <sect3>
    <title>Options</title>
    <variablelist>
      <title>Space bar</title>
      <indexterm>
        <primary>Space bar</primary>
      </indexterm>
      <varlistentry>
        <term>While space bar is pressed</term>
        <listitem>
          <itemizedlist>
            <listitem>
              <para><guilabel>Pan view</guilabel> (default) or</para>
            </listitem>
            <listitem>
              <para><guilabel>Toggle to Move Tool</guilabel></para>
            </listitem>
            <listitem>
              <para><guilabel>No action</guilabel></para>
            </listitem>
          </itemizedlist>
        </listitem>
      </varlistentry>
    </variablelist>
    <variablelist>
      <title>Zoom</title>
      <indexterm>
        <primary>Zoom</primary>
      </indexterm>
    </variablelist>
