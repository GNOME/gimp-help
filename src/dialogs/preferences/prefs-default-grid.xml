<sect2 id='gimp-prefs-default-grid' lang="de;en;fr;zh_CN">
  <title lang='en'>Default Image Grid</title>
  <title lang='de'>Vorgabe-Bildgitter</title>
  <title lang='fr'>Grille d'image par défaut</title>  
  <title lang="zh_CN">默认图像网格</title>

  <indexterm lang='en'>
    <primary>Dialogs</primary>
    <secondary>Preferences</secondary>
    <tertiary>Image grid</tertiary>
  </indexterm>

  <indexterm lang='de'>
    <primary>Dialoge</primary>
    <secondary>Einstellungen</secondary>
    <tertiary>Vorgabe-Gitter</tertiary>
  </indexterm>

  <indexterm lang='fr'>
    <primary>Dialogue</primary>
    <secondary>Préférences</secondary>
    <tertiary>Grille par défaut</tertiary>
  </indexterm>

  <indexterm lang="zh_CN">
    <primary>对话框</primary>
    <secondary>首选项</secondary>
    <tertiary>图像网格</tertiary>
  </indexterm>

  <informalfigure>  
    <mediaobject>
