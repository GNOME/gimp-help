<sect2 id='gimp-prefs-new-image' lang="en;cs;de;fr;zh_CN">
  <title>
    <phrase lang='en'>New Image Preferences</phrase>
    <phrase lang='cs'>Nový obrázek</phrase>
    <phrase lang='de'>Vorgabeeinstellungen für neue Bilder</phrase>
    <phrase lang='fr'>Nouvelle image</phrase>
    <phrase lang="zh_CN">新建图形</phrase>
  </title>

  <indexterm lang='en'>
    <primary>dialogs</primary>
    <secondary>preferences</secondary>
    <tertiary>new image</tertiary>
  </indexterm>
  <indexterm lang='cs'>
    <primary>dialogy</primary>
    <secondary>předvolby</secondary>
    <tertiary>nový obrázek</tertiary>
  </indexterm>
  <indexterm lang='de'>
    <primary>Dialoge</primary>
    <secondary>Einstellungen</secondary>
    <tertiary>Neues Bild</tertiary>
  </indexterm>
  <indexterm lang='fr'>
    <primary>Dialogue</primary>
    <secondary>Préférences</secondary>
    <tertiary>Nouvelle image</tertiary>
  </indexterm>
  <indexterm lang="zh_CN">
    <primary>对话框</primary>
    <secondary>首选项</secondary>
    <tertiary>新建图像</tertiary>
  </indexterm>

  <figure>  
    <title>
      <phrase lang='en'>
        New Image Preferences
      </phrase>
      <phrase lang="de">
        Die Einstellungsansicht für neue Bilder
      </phrase>
      <phrase lang='cs'>
        Předvolby pro nový obrázek
      </phrase>
      <phrase lang='fr'>
        Préférences de Nouvelle Image
      </phrase>
      <phrase lang="zh_CN">
        新建图形首选项
      </phrase>
    </title>
    <mediaobject>
      <imageobject role='tex'>
        <imagedata fileref='../images/preferences/prefs-new-image.png'
          format="PNG" lang='cs;en' width='14cm' scalefit='1' />
        <imagedata
          fileref='../images/preferences/de/prefs-new-image.png'
          format="PNG" lang='de' width='14cm' scalefit='1' />
        <imagedata
          fileref='../images/preferences/fr/prefs-new-image.png'
