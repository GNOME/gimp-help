  <figure float="0">
    <title>
      <phrase>The Channel dialog</phrase>
      
      
      
      
      
      
      
    </title>

    <mediaobject>
      <imageobject>
        <imagedata fileref="../images/dialogs/dialogs-channel.png" format="PNG"/>
