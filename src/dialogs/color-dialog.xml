  <figure float="0">
    <title>
      <phrase>
        The <quote>FG/BG Color</quote> Dialog
      </phrase>
      
      
      
      
      
      
    </title>
    <mediaobject>
      <imageobject>
        <imagedata fileref="../images/dialogs/color-dialog.png" format="PNG"/>
      </imageobject>
      
      
      
      
      
      
      
      
