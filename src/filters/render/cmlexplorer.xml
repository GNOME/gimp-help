        <term>Others tab</term>
        
        
        
        
        
        

        <listitem>
          <figure float="0">
            <title>
              <phrase>
                <quote>CML Explorer</quote> filter options (Others)
              </phrase>
              
              
              
              
              
              
            </title>
            <mediaobject>
              <imageobject>
                <imagedata fileref="../images/filters/options-render-cmlexplorer5.png" format="PNG"/>
              </imageobject>
              
              
              
              
              
            </mediaobject>
