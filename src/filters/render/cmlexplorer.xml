      <varlistentry>
        <term>Miscellaneous options tab</term>
        
        
        
        
        
        

        <listitem>
          <figure float="0">
            <title>
              <phrase>
                <quote>CML Explorer</quote> filter options (Misc.ops)
              </phrase>
              
              
              
              
              
              
            </title>

            <mediaobject>
              <imageobject>
