  <sect3>
    <title>
      <phrase>Overview</phrase>
      
      
      
      
      
      
      
      
    </title>

    <figure float="0">
      <title>
        <phrase>Example of turbulent solid noise.</phrase>
        
        
        
        
         
        
        
        
      </title>

<!--
