    <listitem>
      <para><xref linkend="gimp-filter-antialias"/></para>
    </listitem>
    <listitem>
      <para><xref linkend="gimp-filter-deinterlace"/></para>
    </listitem>
    <listitem>
      <para><xref linkend="gimp-filter-high-pass"/></para>
    </listitem>
    <listitem>
      <para><xref linkend="gimp-filter-noise-reduction"/></para>
    </listitem>
    <listitem>
      <para><xref linkend="gimp-filter-red-eye-removal"/></para>
    </listitem>
    <listitem>
