    <figure>
      <title>
        <phrase lang="en"><quote>Add Bevel</quote> options</phrase>
        <phrase lang="de">
          Eigenschaften des Filters <quote>Rand abschrägen</quote>
        </phrase>
      </title>

      <mediaobject>
        <imageobject lang="en">
          <imagedata
            fileref="../images/filters/options-decor-add-bevel.png"
            format="PNG" />
        </imageobject>
        <imageobject lang="de">
