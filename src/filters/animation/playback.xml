<sect2 id="plug-in-playback" lang="en;fr">
  <sect2info lang="en;fr" role="cvs">
    <revhistory>
      <revision lang="en">
        <revnumber>$Revision: 1.0 $</revnumber>
        <date>2006-12-27</date>
