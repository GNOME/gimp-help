<sect2 id="plug-in-sobel">
  <sect2info role="cvs">
    <revhistory>
      <revision>
        <revnumber>$Revision$</revnumber>
        <date>2006-11-20</date>
        <authorinitials>j.h</authorinitials>
      </revision>
    </revhistory>
