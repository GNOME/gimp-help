  <title>
    <phrase lang="en;de;fr;zh_CN">Sobel</phrase>
    <phrase lang="cs">Sobelova metoda</phrase>
  </title>
 
  <indexterm lang="en;fr;de;zh_CN"><primary>Sobel</primary></indexterm>

  <indexterm lang="cs"><primary>Sobelova metoda</primary></indexterm>

  <indexterm lang="de">
    <primary>Filter</primary>
    <secondary>Kantenerkennung</secondary>
  </indexterm>
  
