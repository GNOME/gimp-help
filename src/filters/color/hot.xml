<sect2 id='plug-in-hot' lang="en;cs;fr;zh_CN">
  <title lang="en">Hot</title>
  <title lang="cs">Videosnímek</title>
  <title lang="fr">Ôter les pixels chauds</title>
  <title lang="zh_CN">燥点</title>

  <indexterm>
    <primary lang="en">Filter</primary>
    <secondary lang="en">Color</secondary>
    <tertiary lang="en">Hot</tertiary>

    <primary lang="cs">filtry</primary>
    <secondary lang="cs">Barvy</secondary>
    <tertiary lang="cs">Videosnímek</tertiary>

    <primary lang="fr">Filtre</primary>
    <secondary lang="fr">Couleur</secondary>
    <tertiary lang="fr">Chaud</tertiary>

    <primary lang="zh_CN">滤镜</primary>
    <secondary lang="zh_CN">颜色</secondary>
    <tertiary lang="zh_CN">燥点</tertiary>
  </indexterm>

  <mediaobject lang="en">
    <imageobject>
      <imagedata fileref='../images/filters/filters-color-hot.png' format="PNG"/>
    </imageobject>
  </mediaobject>

