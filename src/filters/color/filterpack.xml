<sect2 id='plug-in-filter-pack' lang="en;cs;de;fr">
  <title lang="en">Filter Pack</title>
  <title lang="cs">Sada filtrů</title>
  <title lang="de">Filterpaket</title>
  <title lang="fr">Paquet de filtres</title>

  <indexterm lang="en">
    <primary>Filter</primary>
    <secondary>Color</secondary>
    <tertiary>Pack</tertiary>
  </indexterm>
  
  <indexterm lang="cs">
    <primary>Filtry</primary>
    <secondary>Barvy</secondary>
    <tertiary>Sada filtrů</tertiary>
  </indexterm>
  
  <indexterm lang="de">
    <primary>Filter</primary>
    <secondary>Farben</secondary>
  </indexterm>
  <indexterm lang="de"><primary>Filterpaket</primary></indexterm>
  <indexterm lang="de"><primary>Variationen</primary></indexterm>
      
  <indexterm lang="fr">
    <primary>Filtre</primary>
