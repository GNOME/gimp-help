  <sect3>
    <title>
      <phrase>Overview</phrase>
      
      
      
      
      
      
      
      
    </title>

    <figure float="0">
      <title>
        <phrase>
          Example for the <quote>Cool Metal</quote> filter
        </phrase>
        
        
        
        
        
        
      </title>

      <mediaobject>
        <imageobject>
          <imagedata format="JPG" fileref="../images/filters/examples/coolmetal.jpg"/>
        </imageobject>

        <caption>
          <para>The <quote>Cool Metal</quote> filter</para>
          
          
          
          
          
          
        </caption>
      </mediaobject>

      <mediaobject>
