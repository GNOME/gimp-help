    <variablelist>
      <varlistentry>
        <term lang="en">Border size (pixels)</term>
        <term lang="de">Zellengröße (Pixel)</term>
        <term lang="es">Border size (pixels)</term>
        <term lang="fr">Taille de la bordure (pixels)</term>
        <term lang="it">Border size (pixels)</term>
