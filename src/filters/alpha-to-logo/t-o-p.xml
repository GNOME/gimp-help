<sect2 id="script-fu-t-o-p-logo-alpha">
  <sect2info>
    <revhistory>
      <revision>
        <revnumber>$Revision$</revnumber>
        <date>2007-11-21</date>
        <authorinitials>ude</authorinitials>
      </revision>
    </revhistory>
