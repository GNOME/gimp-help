    <phrase lang="es">Quitar todas las guías</phrase>
    <phrase lang="fr">Enlever tous les guides</phrase>
    <phrase lang="it">Rimuovi tutte le guide</phrase>
    <phrase lang="lt">Pašalinti visas gaires</phrase>
