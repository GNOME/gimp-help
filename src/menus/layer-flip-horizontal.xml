<sect2 id="gimp-layer-flip-horizontal">
  <sect2info role="cvs">
    <revhistory>
      <revision>
        <revnumber>$Revision$</revnumber>
        <date>2006-08-03</date>
        <authorinitials>scb</authorinitials>
