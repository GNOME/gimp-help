<sect2 id="gimp-image-fit-canvas-to-layers" lang="en;de;fr">
  <sect2info lang="de" role="cvs">
    <revhistory>
      <revision lang="de">
        <revnumber>$Revision$</revnumber>
        <date>2006-12-10</date>
        <authorinitials>lexa</authorinitials>
