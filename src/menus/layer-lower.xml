  <title>
    <phrase lang="en">Lower Layer</phrase>
    <phrase lang="fr">Descendre le calque</phrase>
    <phrase lang="de">Ebene absenken</phrase>
    <phrase lang="it">Abbassa il livello</phrase>
    <phrase lang="no">Senk laget</phrase>
    <phrase lang="zh_CN">降低图层</phrase>
  </title>

  <indexterm lang="en">
    <primary>Layer</primary>
    <secondary>Stack managing</secondary>
    <tertiary>Lower layer</tertiary>
  </indexterm>
  <indexterm lang="en">
    <primary>Lower Layer</primary>
  </indexterm>

  <indexterm lang="de">
    <primary>Ebene</primary><secondary>absenken</secondary>
  </indexterm>

  <indexterm lang="fr">
    <primary>Calque</primary>
    <secondary>Gérer la pile de calques</secondary>
    <tertiary>Descendre le calque</tertiary>
  </indexterm>
  <indexterm lang="fr">
    <primary>Descendre le calque</primary>
  </indexterm>
 
  <indexterm lang="it">
    <primary>Livello</primary>
    <secondary>Gestione della pila</secondary>
    <tertiary>Abbassa il livello attivo</tertiary>
  </indexterm>
  <indexterm lang="it">
    <primary>Abbassa il livello</primary>
  </indexterm>

  <indexterm lang="no">
    <primary>Lagmenyen</primary>
