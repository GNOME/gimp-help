<sect2 id="gimp-filter-repeat">
  <sect2info role="cvs">
    <revhistory>
      <revision>
        <revnumber>$Revision$</revnumber>
        <date>2006-07-28</date>
        <authorinitials>scb</authorinitials>
      </revision>
      
      
      
      
