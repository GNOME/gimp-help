  <figure>
    <title>
      <phrase>The <quote>Rearrange Colormap</quote> window</phrase>
    </title>
    <mediaobject>
      <imageobject>
        <imagedata fileref="../images/menus/colors-map-rearrange.png" format="PNG"/>
      </imageobject>
