    <para>Three options are available:</para>
    <!--para lang="de">Drei Eigenschaften stehen zur Verfügung:</para-->
    
    

    <!--TODO es;it;lt-->
    <variablelist><!--added 2008-01-21-->
      <title>
        <phrase>Choose shade of gray based on</phrase>
        
        
        
      </title>
      <varlistentry>
        <term>
          <phrase>Lightness</phrase>
          
          
          
        </term>
        <listitem>
          <para>The graylevel will be calculated as</para>
          
          
          
          <informalequation>
            <!--PENDING DocBook 4.5: mathphrase lang="xx">...</mathphrase-->
            <mediaobject>
              <textobject>
                <phrase>
                  Lightness = ½ * (max(R,G,B) + min(R,G,B))
                </phrase>
                
                
                
              </textobject>
            </mediaobject>
          </informalequation>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term>
          <phrase>Luminosity</phrase>
          
          
          
        </term>
        <listitem>
          <para>The graylevel will be calculated as</para>
          
          
          
          <informalequation>
            <!--PENDING DocBook 4.5: mathphrase lang="xx">...</mathphrase-->
            <mediaobject>
              <textobject>
                <phrase>
                  Luminosity = 0.21 * R + 0.71 * G + 0.07 * B
                </phrase>
                
                
                
              </textobject>
            </mediaobject>
          </informalequation>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term>
          <phrase>Average</phrase>
          
          
          
        </term>
        <listitem>
          <para>The graylevel will be calculated as</para>
          
          
          
          <informalequation>
            <!--PENDING DocBook 4.5: mathphrase lang="xx">...</mathphrase-->
            <mediaobject>
              <textobject>
                <phrase>Average Brightness = (R + G + B) / 3</phrase>
                
                
                
              </textobject>
            </mediaobject>
          </informalequation>
        </listitem>
      </varlistentry>
    </variablelist>

    <figure float="0">
      <title>
        <phrase>Comparing the three options</phrase>
        
        
        
