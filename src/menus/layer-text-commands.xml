      <listitem id="gimp-layer-text-to-path">
        <para lang="en">
          <link linkend="text-to-path">Text to Path</link>
        </para>
        <formalpara lang="de">
          <title>Pfad aus Text</title>
          <para>
            Siehe <link linkend="text-to-path">Pfad aus Text erzeugen</link>
