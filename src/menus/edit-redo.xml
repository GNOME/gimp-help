<sect2 id="gimp-edit-redo">
  <sect2info role="cvs">
    <revhistory>
      <revision>
        <revnumber>$Revision$</revnumber>
        <date>2006-07-27</date>
        <authorinitials>sally</authorinitials>
      </revision>
      
      
      
      
      
