    <imageobject>
      <imagedata fileref='../images/toolbox/toolbox-move.png' format="PNG"/>
    </imageobject>
  </mediaobject>
  <mediaobject lang="de">
    <imageobject>
      <imagedata fileref='../images/toolbox/de/toolbox-move.png' format="PNG"/>
    </imageobject>
  </mediaobject>
  <mediaobject lang="fr">
    <imageobject>
