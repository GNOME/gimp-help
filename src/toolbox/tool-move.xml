<sect2 id='gimp-tool-move' lang="en;fr;zh_CN">
  <title lang="en">Move Tool</title>
  <title lang="de">Verschieben Werkzeug</title>
  <title lang="fr">Outil Déplacement</title>
  <title lang="zh_CN">移动工具</title>

  <indexterm lang="en">
    <primary>Toolbox</primary>
    <secondary>Move</secondary>
  </indexterm>
  <indexterm lang="de">
    <primary>Werkzeugfenster</primary>
    <secondary>Verschieben</secondary>
  </indexterm>
  <indexterm lang="fr">
    <primary>Boîte à Outils</primary>
    <secondary>Déplacement</secondary>
  </indexterm>
  <indexterm lang="zh_CN">
    <primary>工具箱</primary>
    <secondary>移动</secondary>
  </indexterm>
  
